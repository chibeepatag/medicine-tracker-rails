<%= form_with(model: [@patient, @event], local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :event_date %>
    <%= form.date_select :event_date, id: :event_event_date %>
  </div>

  <div class="field">
    <%= form.label :severity %>
    <%= form.select(:severity, options_from_collection_for_select(Severity.all, :name, :name)) %>
  </div>

  <div class="field">
    <%= form.label :organ %>
    <%= form.select(:organ, options_from_collection_for_select(Organ.all, :name, :name)) %>
  </div>

  <div class="field">
    <%= form.label :reaction %>
    <%= form.select(:reaction, options_from_collection_for_select(Reaction.all, :name, :name)) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
